<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#FFFFFF"
    android:orientation="vertical"
    android:layout_weight="1"
    android:id="@+id/storyfragment"
    tools:context=".StoryFrag">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.appcompat.widget.Toolbar
            android:layout_width="match_parent"
            android:id="@+id/toolbar"
            app:title="@string/app_name"
            android:background="#C3D50000"
            app:titleTextColor="@color/white"
            app:menu="@menu/tolbricon"
            app:popupTheme="@style/ThemeOverlay.AppCompat.ActionBar"
            android:layout_height="?attr/actionBarSize">
        </androidx.appcompat.widget.Toolbar>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content">



        <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <ProgressBar
                android:id="@+id/spin_kit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_centerInParent="true"/>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="210dp">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:elevation="5dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardElevation="3dp"
                app:cardUseCompatPadding="true">

                <com.denzcoskun.imageslider.ImageSlider
                    android:id="@+id/image_slider"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    app:iss_auto_cycle="true"
                    android:layout_marginBottom="3dp"
                    android:layout_marginTop="3dp"
                    android:layout_marginRight="3dp"
                    android:layout_marginLeft="3dp"
                    app:iss_period="5000"
                    app:iss_delay="0">

                </com.denzcoskun.imageslider.ImageSlider>


            </androidx.cardview.widget.CardView>


        </RelativeLayout>


            <LinearLayout android:elevation="20dp"
                android:weightSum="4"
                android:layout_marginBottom="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="120dp">


                <ImageButton
                    android:id="@+id/offers_id"
                    android:background="@color/white"
                    android:src="@drawable/offerpng"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <ImageButton
                    android:id="@+id/discountbox_id"
                    android:background="@color/white"
                    android:src="@drawable/discountpng"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <ImageButton
                    android:id="@+id/dailymenu_id"
                    android:background="@color/white"
                    android:src="@drawable/menupng"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>

                <ImageButton
                    android:id="@+id/combo_id"
                    android:src="@drawable/combopng"
                    android:background="@color/white"
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"/>


            </LinearLayout>

            <LinearLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <View
                android:layout_width="380dp"
                android:layout_height="2dp"
                android:background="#E91E63" />

            </LinearLayout>


            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_gravity="center_vertical"
                android:layout_width="230dp"
                android:layout_height="wrap_content">

                <TextView
                    android:textColor="@color/black"
                    android:fontFamily="@font/sf_black"
                    android:layout_marginLeft="15dp"
                    android:gravity="center_vertical"
                    android:text="Breakfast"
                    android:layout_width="match_parent"
                    android:layout_height="30dp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="210dp"
                android:orientation="horizontal"
                android:weightSum="2">

               <androidx.recyclerview.widget.RecyclerView
                   android:id="@+id/specialrecycler"
                   android:layout_width="match_parent"
                   android:layout_height="match_parent">
               </androidx.recyclerview.widget.RecyclerView>

            </LinearLayout>



            <LinearLayout
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


                <View
                    android:layout_width="380dp"
                    android:layout_height="2dp"
                    android:background="#E91E63" />

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="vertical"
                android:weightSum="3">


                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="150dp"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:elevation="10dp"
                    app:cardBackgroundColor="#00E676"
                    app:cardCornerRadius="10dp"
                    app:cardElevation="3dp"
                    app:cardUseCompatPadding="true">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                        <TextView
                            android:drawableLeft="@drawable/ic_baseline_room_service_24"
                            android:layout_marginLeft="30dp"
                            android:textSize="20sp"
                            android:layout_marginTop="10dp"
                            android:drawablePadding="10dp"
                            android:fontFamily="@font/sf_bold"
                            android:text="@string/app_name"
                            android:layout_width="100dp"
                            android:layout_height="28dp"/>

                    </RelativeLayout>

                </androidx.cardview.widget.CardView>



            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="220dp">

            </LinearLayout>


</LinearLayout>

            </RelativeLayout>
    </ScrollView>


</LinearLayout>




    </LinearLayout>

</FrameLayout>