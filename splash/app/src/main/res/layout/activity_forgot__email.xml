<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/gradeint"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".login_Activity.Forgot_Email">


 <LinearLayout
     android:weightSum="3"
     android:orientation="vertical"
     android:layout_width="match_parent"
     android:layout_height="match_parent">

  <RelativeLayout
      android:layout_weight="0.7"
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="0dp">
<TextView
    android:layout_centerHorizontal="true"
    android:layout_alignParentBottom="true"
    android:textColor="#000000"
    android:textSize="30dp"
    android:text="Reset password"
    android:layout_width="250dp"
    android:layout_height="wrap_content" />
  </RelativeLayout>

  <LinearLayout
      android:layout_weight="0.3"
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="0dp">
<TextView
    android:layout_marginTop="30dp"
    android:gravity="center"
    android:textSize="17dp"
    android:textColor="#000000"
    android:text="An email with the reset link will be sent to you"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />
  </LinearLayout>
  <LinearLayout
      android:weightSum="2"
      android:layout_weight="1"
      android:orientation="vertical"
      android:layout_width="match_parent"
      android:layout_height="0dp">
   <EditText
       android:id="@+id/txtEmailForgot"
       android:layout_marginTop="20dp"
       android:textSize="13dp"
       android:textColor="#ffffff"
       android:drawablePadding="16dp"
       android:drawableLeft="@drawable/ic_mail_outline_black_24dp"
       android:paddingLeft="20dp"
       android:hint="Enter your Email or Phone number"
       android:layout_marginRight="30dp"
       android:layout_marginLeft="30dp"
       android:background="@drawable/editshape"
       android:textColorHint="#ffffff"
       android:layout_width="match_parent"
       android:layout_height="65dp" />


   <Button
       android:id="@+id/bbforgot"
       android:layout_marginTop="30dp"
       android:textColor="#ffffff"
       android:text="Reset"
       android:layout_marginRight="130dp"
       android:layout_marginLeft="130dp"
       android:background="@drawable/editshape"
       android:layout_width="match_parent"
       android:layout_height="60dp" />
  </LinearLayout>


 </LinearLayout>
 <TextView
     android:layout_width="wrap_content"
     android:layout_height="wrap_content"
     android:textSize="17dp"
     android:textColor="#ffffff"
     android:layout_alignParentBottom="true"
    android:layout_centerInParent="true"
     android:text="Already Have an Account?Sign-in"/>


</RelativeLayout>